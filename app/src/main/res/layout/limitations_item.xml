<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_app_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/tv_limitations"
        android:layout_width="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_height="wrap_content"
        android:text="Instagram"
        android:layout_alignTop="@+id/img_app_icon"
        android:layout_alignBottom="@+id/img_app_icon"
        android:layout_toRightOf="@+id/img_app_icon"
        android:layout_toStartOf="@+id/toggle_button"
        android:layout_toEndOf="@id/img_app_icon"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <ToggleButton
        android:id="@+id/toggle_button"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignTop="@id/img_app_icon"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:background="@drawable/bg_on_off_toggle"
        android:checked="false"
        android:textColor="@color/white" />

</RelativeLayout>